<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block px-5 py-2 bg-zinc-600 w-full rounded-md" type="text" placeholder="title goes here" name="title">
                <textarea class="block px-5 py-2 resize-none bg-zinc-600 mt-4 w-full rounded-md"  placeholder="text goes here" name="details"></textarea>
                <input class="mt-4 bg-purple-600 px-5 py-2 rounded-md " type="submit" value="create task">
            </form>
        </div>
        <div class="tasks flex gap-3 flex-wrap p-10 ">
            <% if(files.length >0){ %>
            <% files.forEach(function(val){ %>
                <div class="task  w-72 px-3 py-4 rounded-md bg-yellow-600">
                    <h1 class="text-white"> <%= val %></h1>
                    <a class="text-blue-900 inline-block mt-3" href="/file/<%= val %>">Read More</a> 
                </div> 
            <% }) %>
            <% } else { %>

                <h3 class="text-zinc-600 ">No Task Yet</h3>

            <% } %>
            
        
            
        </div>
    </div>
</body>
</html>